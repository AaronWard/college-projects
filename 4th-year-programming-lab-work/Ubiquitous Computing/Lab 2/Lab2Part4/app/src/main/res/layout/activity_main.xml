<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aaron.lab2part4.MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="348dp"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint=" List Name"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="16dp"
        android:background="@drawable/edittextborder"
        android:layout_marginTop="21dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editText2" />

    <Button
        android:id="@+id/createButton"
        android:layout_width="152dp"
        android:layout_height="50dp"
        android:text="Create"
        tools:layout_editor_absoluteY="81dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_alignBaseline="@+id/retrieveButton"
        android:layout_alignBottom="@+id/retrieveButton"
        android:layout_alignStart="@+id/editText2" />

    <Button
        android:id="@+id/retrieveButton"
        android:layout_width="144dp"
        android:layout_height="50dp"
        android:text="Retrieve"
        tools:layout_editor_absoluteY="81dp"
        tools:layout_editor_absoluteX="222dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/editText"
        android:layout_alignEnd="@+id/editText" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="351dp"
        android:layout_height="150dp"
        android:paddingLeft="10dp"
        android:hint="List Contents"
        android:ems="10"
        android:inputType="textMultiLine"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="100dp"
        android:background="@drawable/edittextborder"
        android:layout_marginBottom="32dp"
        android:layout_above="@+id/clearButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/clearButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:layout_alignBaseline="@+id/saveButton"
        android:layout_alignBottom="@+id/saveButton"
        android:layout_alignStart="@+id/editText2"
        android:layout_alignEnd="@+id/createButton" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save"
        android:layout_marginBottom="27dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignStart="@+id/retrieveButton" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:layout_below="@+id/editText"
        android:layout_marginTop="7dp"
        android:layout_alignStart="@+id/editText"
        android:layout_alignEnd="@+id/retrieveButton" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:layout_above="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:layout_marginBottom="31dp"
        android:layout_alignEnd="@+id/createButton" />

</RelativeLayout>
